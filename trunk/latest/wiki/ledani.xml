<Module>
  <ModulePrefs title="LED Animation Code Generator" height="600" /> 
  <Content type="html">
     <![CDATA[ 
<script language='JavaScript'>
function genCcode(lst,name)
{
result = "prog_uchar " + name + "[] PROGMEM = {";

for(var i = 0;i < lst.length-1;i++) 
{
result += lst[i];
result += ",";
}

result += lst[lst.length-1];
result += " };";

return result;
}

function BuildLedCode(input,outputLoc)
{
  outputLoc.innerHTML = input;
  alert(outputLoc);
  var sa = input.split("\n");
  var result = [];
  var delays = [];
  var nFrames = 0;
  for(var line = 0;line < sa.length;line++) {
    //print("[" + sa[line] + "]\r\n");
    var s = sa[line].split(":");
    if (s.length != 2) continue;
    nFrames +=1;
    delay = s[0];
    rest = s[1];
    rest = rest.replace(/[^*.]/g, "");
    delays += [delay]
    //print (delay);
    //print ("rest");
    //print (rest);
    //print ("\n");
    val = 0;
    for(var i=0;i<70; i++)
      {
        val*=2;
        if ((i<rest.length)&&(rest[i] == "*")) val+=1;
        if ((i%8)==7)
          {
            //print("Value is: 0x" + val.toString(16) + "\n");
            result += [val];
            val=0;
          }
      }
    //print("Value is z: 0x" + val.toString(16)+ "\n");
    result += [val];

  }

 ccode = genCcode(result,"leds") + "\n";
 ccode += genCcode(delays,"delays")+ "\n";
 ccode += "int numFrames = " + nFrames + ";\n";
 //print (ccode);
 outputLoc.innerHTML = ccode;
 return false;
}
</script>
